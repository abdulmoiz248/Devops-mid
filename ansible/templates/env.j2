# Application Environment Configuration
# Generated by Ansible

# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY={{ secret_key | default('change-this-secret-key-in-production') }}

# Database Configuration
DATABASE_URL=postgresql://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port | default('5432') }}/{{ db_name }}
SQLALCHEMY_DATABASE_URI=postgresql://{{ db_user }}:{{ db_password }}@{{ db_host }}:{{ db_port | default('5432') }}/{{ db_name }}
SQLALCHEMY_TRACK_MODIFICATIONS=False

# Redis/Celery Configuration (if needed)
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Application Settings
APP_NAME={{ app_name | default('devops-mid') }}
APP_PORT={{ app_port | default('5000') }}
DEBUG=False

# Upload Configuration
UPLOAD_FOLDER=/opt/app/uploads
MAX_CONTENT_LENGTH=16777216

# AWS Configuration (if needed)
AWS_REGION={{ aws_region | default('us-east-1') }}

# Logging
LOG_LEVEL=INFO
LOG_FILE=/opt/app/logs/app.log
