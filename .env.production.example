# =============================================================================
# Production Environment Configuration
# =============================================================================
# DO NOT commit this file to version control

# Application Settings
FLASK_APP=app.py
FLASK_ENV=production
SECRET_KEY=CHANGE_THIS_TO_A_VERY_LONG_RANDOM_SECRET_KEY_FOR_PRODUCTION
DEBUG=False

# Database Configuration (Use managed database service in production)
DATABASE_URL=postgresql://prod_user:STRONG_PASSWORD_HERE@db:5432/image_processing_prod

# Celery Configuration
CELERY_BROKER_URL=amqp://admin:STRONG_RABBITMQ_PASSWORD@rabbitmq:5672//
CELERY_RESULT_BACKEND=rpc://

# File Storage Configuration
UPLOAD_FOLDER=/tmp/uploads
IMAGE_OUTPUT_DIR=/tmp/output_images
OUTPUT_CSV_DIR=/tmp/output_csvs
MAX_CONTENT_LENGTH=16777216

# PostgreSQL Database Credentials
POSTGRES_USER=prod_user
POSTGRES_PASSWORD=CHANGE_THIS_TO_STRONG_PASSWORD
POSTGRES_DB=image_processing_prod

# RabbitMQ Credentials
RABBITMQ_DEFAULT_USER=admin
RABBITMQ_DEFAULT_PASS=CHANGE_THIS_TO_STRONG_RABBITMQ_PASSWORD

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_BIND=0.0.0.0:5000
GUNICORN_LOG_LEVEL=warning

# Ports
WEB_PORT=80
RABBITMQ_UI_PORT=15672

# Docker Configuration
COMPOSE_PROJECT_NAME=image-processing-prod
