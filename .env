# =============================================================================
# Environment Configuration - Development
# =============================================================================

# Application Settings
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=dev-secret-key-change-in-production-to-random-string
DEBUG=False

# Database Configuration
DATABASE_URL=postgresql://postgres:devpassword123@db:5432/image_processing

# Celery Configuration
CELERY_BROKER_URL=amqp://guest:guest@rabbitmq:5672//
CELERY_RESULT_BACKEND=rpc://

# File Storage Configuration
UPLOAD_FOLDER=/tmp/uploads
IMAGE_OUTPUT_DIR=/tmp/output_images
OUTPUT_CSV_DIR=/tmp/output_csvs
MAX_CONTENT_LENGTH=16777216

# PostgreSQL Database Credentials
POSTGRES_USER=postgres
POSTGRES_PASSWORD=devpassword123
POSTGRES_DB=image_processing

# RabbitMQ Credentials
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_THREADS=2
GUNICORN_BIND=0.0.0.0:5000
GUNICORN_LOG_LEVEL=info

# Ports
WEB_PORT=5000
RABBITMQ_UI_PORT=15672

# Docker Configuration
COMPOSE_PROJECT_NAME=image-processing-app
